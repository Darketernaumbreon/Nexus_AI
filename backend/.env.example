# Database Configuration
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here
POSTGRES_DB=nexus_ai

# API Keys (REQUIRED - Get from respective services)
# OpenTopography: https://opentopography.org/
OPENTOPOGRAPHY_API_KEY=your_opentopography_key_here

# OpenRouteService: https://openrouteservice.org/dev/#/signup
OPENROUTE_API_KEY=your_openroute_key_here

# Redis Cache (optional)
REDIS_HOST=localhost
REDIS_PORT=6379

# Application Paths
ML_ARTIFACTS_DIR=ml_engine/artifacts
WEATHER_CACHE_DIR=data/weather_cache
DEM_CACHE_DIR=data/dem_cache
CONDITIONED_DEM_CACHE_DIR=data/conditioned_cache
GROUND_TRUTH_CACHE_DIR=data/ground_truth_cache
ML_TRAINING_DATA_DIR=data/ml_training

# Weather API Configuration
OPEN_METEO_BASE_URL=https://api.open-meteo.com/v1
OPEN_METEO_ARCHIVE_URL=https://archive-api.open-meteo.com/v1
WEATHER_API_TIMEOUT=60
WEATHER_MAX_RETRIES=3
WEATHER_RETRY_DELAY=2.0

# Routing Configuration
OPENROUTE_BASE_URL=https://api.openrouteservice.org
ROUTING_TIMEOUT=10
ROUTING_MAX_RETRIES=2

# Ground Truth Data
CWC_BASE_URL=https://ffs.tamcnhp.com
CWC_REQUEST_TIMEOUT=30
CWC_MAX_RETRIES=3
CWC_RETRY_DELAY=2.0

# ML Configuration
XGB_MAX_DEPTH=4
XGB_LEARNING_RATE=0.05
XGB_N_ESTIMATORS=200
XGB_SUBSAMPLE=0.8
XGB_COLSAMPLE_BYTREE=0.8

# Feature Engineering
TEST_SIZE=0.2
RECALL_WEIGHT=2.0

# DEM Configuration
DEM_BBOX_BUFFER=0.01
DEM_DEFAULT_DATASET=COP30
FLOW_ACCUMULATION_THRESHOLD=1000

# Time-Series Cleaning
MAX_WATER_LEVEL_JUMP_MH=3.0
MAX_GAP_HOURS_INTERPOLATE=6
